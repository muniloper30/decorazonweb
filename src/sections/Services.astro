---
import { servicios } from "@/consts/servicios";
import { Image } from "astro:assets";
import celebraciones from "../assets/servicios/celebraciones.jpeg";
import montajes from "../assets/servicios/montajeGlobo.jpeg";
import bgService from "../assets/bgHero.jpg";
import papeleria from "../assets/servicios/papeleria.jpg";
import detalles from "../assets/servicios/detalles.png";



---

<section
  id="services"
  class="relative py-4 sm:py-32"
  style={`background-image:url(${bgService.src}); background-size:cover; background-position:center;`}
>
  <div class="absolute inset-0 bg-white/70 backdrop-blur-[1px]"></div>

  <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
    <header class="text-center max-w-2xl mx-auto">
      <h2 class="text-4xl font-semibold tracking-tight text-neutral-900 sm:text-5xl">
        Explora nuestros servicios
      </h2>
      <p class="mt-3 text-neutral-700">
        Decoramos con mimo cada detalle para crear momentos inolvidables.
      </p>
    </header>

    
    <div class="mt-12 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {servicios.map(({ image, alt, title, desc, tags, objectPos }) => (
        <article class="group h-full">
          <div class="flex h-full flex-col overflow-hidden rounded-2xl bg-white ring-1 ring-black/5 shadow-sm transition-shadow duration-300 hover:shadow-lg">
           
            <div class="aspect-[4/3] w-full overflow-hidden">
              <Image
                src={image}
                alt={alt}
                class={`h-full w-full object-cover ${objectPos ?? ""} transition-transform duration-700 ease-out group-hover:scale-105`}
                sizes="(min-width: 1024px) 25vw, (min-width: 640px) 50vw, 100vw"
                loading="lazy"
                decoding="async"
              />
            </div>

           
            <div class="flex-1 p-6">
              <h3 class="text-lg font-semibold text-neutral-900">{title}</h3>
              <p class="mt-2 text-sm text-neutral-700 line-clamp-4">
                {desc}
              </p>
            </div>

           
            <div class="mt-auto border-t border-neutral-300 p-4">
              <ul class="flex flex-wrap gap-2">
                {tags.map((t) => (
                  <li class="select-none rounded-full bg-neutral-100 px-3 py-1 text-xs font-medium text-neutral-700 transition-colors hover:bg-black hover:text-white cursor-pointer">
                    {t}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="text-center max-w-2xl mx-auto mt-12">
      <h2 class="text-xl font-semibold tracking-tight text-neutral-900">
        ¿No encuentras lo que buscas?
      </h2>
      <p class="mt-3 text-neutral-700">
        Rellena este formulario y cuéntanos qué necesitas.
      </p>
      <br>
      <button
        class="bg-transparent text-black border border-black
               hover:bg-black hover:text-white
               transition-colors duration-500
               py-2 px-4 cursor-pointer"
      >
        ¡Pincha aquí!
      </button>
    </div>
  </div>
</section>
