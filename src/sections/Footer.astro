---
import Image from "astro/components/Image.astro";
import Logo from "../assets/logoDcorazon.png";
---

<footer class="shadow-sm bg-tertiary mt-2">
  <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <a
        href="https://flowbite.com/"
        class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse"
      >
        <Image
          class="h-auto w-24 md:w-[150px]"
          src={Logo}
          alt="Logo Decorazon"
        />
        <span
          class="self-center text-2xl font-semibold whitespace-nowrap text-neutral-800/80"
          >DeCorazon</span
        >
      </a>
      <ul
        class="flex flex-wrap items-center mb-6 text-sm font-medium text-neutral-800/80 sm:mb-0 "
      >
        <li>
          <a href="#" class="hover:underline me-4 md:me-6">Inicio</a>
        </li>
        <li>
          <a href="#" class="hover:underline me-4 md:me-6">Galería</a>
        </li>
        <li>
          <a href="#" class="hover:underline me-4 md:me-6">Servicios</a>
        </li>
        <li>
          <a href="#" class="hover:underline">Contact</a>
        </li>
        <li>
          <a href="/Form" class="hover:underline ms-4 md:ms-6">Solicitar presupuesto</a>
        </li>
      </ul>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
    <span class="block text-sm text-gray-500 sm:text-center "
      >© 2025 <a href="https://flowbite.com/" class="hover:underline"
        >DeCorazon™</a
      >. All Rights Reserved.</span
    >
  </div>
</footer>
