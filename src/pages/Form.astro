---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Formulario de Evento">
  <section class="relative bg-gradient-to-b from-secondary/20 to-white py-20">
    <div class="mx-auto max-w-4xl px-6">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">
        Solicitud de Evento
      </h2>

      <form class="bg-white rounded-2xl shadow-xl p-8 space-y-10">
        <!-- Sección: Datos personales -->
        <div>
          <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">
            Datos personales
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Tu nombre</label>
              <input
                type="text"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Teléfono</label>
              <input
                type="tel"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700">Email</label>
              <input
                type="email"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
          </div>
        </div>

        <!-- Sección: Datos del evento -->
        <div>
          <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">
            Información del evento
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700">Día del evento</label>
              <input
                type="date"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Lugar del evento</label>
              <input
                type="text"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Montaje</label>
              <select
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              >
                <option>S</option>
                <option>M</option>
                <option>L</option>
                <option>XL</option>
                <option>Otro</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Tipo de evento</label>
              <select
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              >
                <option>Cumpleaños</option>
                <option>Baby shower</option>
                <option>Comunión</option>
                <option>Bautizo</option>
                <option>Otro</option>
              </select>
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700">Temática</label>
              <input
                type="text"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Nombre del niñ@</label>
              <input
                type="text"
                class="bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Edad</label>
              <input
                type="number"
                class="bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              />
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700">Extras / Papelería</label>
              <textarea
                rows="3"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              ></textarea>
            </div>
          </div>
        </div>

        <!-- Sección: Notas finales -->
        <div>
          <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">
            Notas adicionales
          </h3>
          <textarea
            rows="5"
            class="w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
            placeholder="Cuéntanos detalles importantes (horario de acceso, parking, restricciones, etc.)"
          ></textarea>
        </div>

        <!-- Botón -->
        <div>
          <button
            type="submit"
            class="w-full rounded-xl bg-primary px-6 py-4 text-white font-semibold text-lg shadow-md hover:bg-primary/80 transition-colors"
          >
            Enviar solicitud
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout>
