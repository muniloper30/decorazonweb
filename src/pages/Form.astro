---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Formulario de Evento">
  <section class="relative bg-gradient-to-b from-secondary/20 to-white py-20">
    <div class="mx-auto max-w-4xl px-6">
      <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">
        Solicitud de Evento
      </h2>
      <h3
        class="block pb-20 text-center text-lg font-bold text-neutral-800/80 opacity-80 max-md:px-6 max-md:pb-5"
      >
        Cuéntanos tu idea Queremos conocer todos los detalles de tu evento.
        Cuéntanos qué estás planeando, a quién va dedicado, cómo te gustaría que
        fuera la decoración o la temática… ¡Nos encantará darle forma contigo.
      </h3>
      <form class="bg-white rounded-2xl shadow-xl p-8 space-y-10" id="form">
        <!-- Sección: Datos personales -->
        <div>
          <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">
            Datos personales
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Tu nombre</label
              >
              <input
                type="text"
                name="name"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Teléfono</label
              >
              <input
                type="tel"
                name="from_number"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700"
                >Email</label
              >
              <input
                type="email"
                name="email_id"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
          </div>
        </div>

        <!-- Sección: Datos del evento -->
        <div>
          <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">
            Información del evento
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Día del evento</label
              >
              <input
                type="date"
                name="event_date"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Lugar del evento</label
              >
              <input
                type="text"
                name="event_location"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                required
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Montaje</label
              >
              <select
                name="setup_size"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              >
                <option>S</option>
                <option>M</option>
                <option>L</option>
                <option>XL</option>
                <option>Otro</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Tipo de evento</label
              >
              <select
                name="event_type"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              >
                <option>Cumpleaños</option>
                <option>Baby shower</option>
                <option>Comunión</option>
                <option>Bautizo</option>
                <option>Evento Corporativo</option>
                <option>Otro</option>
              </select>
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700"
                >Temática</label
              >
              <input
                type="text"
                name="event_theme"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >¿A quién va dedicado el evento?</label
              >
              <input
                type="text"
                name="child_name"
                class="bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Años que se celebran</label
              >
              <input
                type="number"
                name="child_age"
                class="bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
              />
            </div>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-700"
                >Extras / Papelería</label
              >
              <textarea
                rows="3"
                name="extras_details"
                class="mt-2 w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
                placeholder="Botellas personalizadas, manteles, etiquetas, cartelería..."
              ></textarea>
            </div>
          </div>
        </div>

        <!-- Sección: Notas finales -->
        <div>
          <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">
            Notas adicionales
          </h3>
          <textarea
            rows="5"
            name="message"
            class="w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-rose-500 hover:border-rose-300 shadow-sm focus:shadow"
            placeholder="Cuéntanos detalles importantes (horario de acceso, restricciones, etc.)"
          ></textarea>
        </div>

        <!-- Botón -->
        <div>
          <button
            type="submit"
            id="button"
            value="Send Email"
            class="w-full rounded-xl bg-primary px-6 py-4 text-white font-semibold text-lg shadow-md hover:bg-rose-400 transition-colors cursor-pointer"
          >
            Enviar solicitud
          </button>
        </div>
      </form>

      <!-- Notificación de éxito -->
      <div
        id="toast-success"
        class="hidden fixed bottom-6 right-6 max-w-sm w-full bg-emerald-900 text-emerald-200 rounded-lg shadow-lg p-4 border border-emerald-700 animate-fade-in"
      >
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <!-- Icono de check -->
            <svg
              class="h-6 w-6 text-emerald-400"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="font-semibold">¡Formulario enviado!</p>
            <p class="text-sm text-emerald-300">
              Hemos recibido tu solicitud correctamente. Te contactaremos
              pronto.
            </p>
            <div class="mt-2 flex gap-4 text-sm">
              <button id="dismiss-toast" class="font-semibold hover:underline">
                Cerrar
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .animate-fade-in {
      animation: fadeIn 0.4s ease-out;
    }
  </style>
</Layout>

<script is:inline>
  // Función para enviar email usando EmailJS directamente
  async function sendEmail(form) {
    // Cargar EmailJS si no está disponible
    if (typeof emailjs === 'undefined') {
      await new Promise((resolve, reject) => {
        const script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js';
        script.onload = resolve;
        script.onerror = reject;
        document.head.appendChild(script);
      });
    }
    
    // Inicializar EmailJS
    emailjs.init("612p8l6--jl1x8Irv");
    
    const serviceId = "default_service";
    const templateId = "template_ap3arcv";
    
    return emailjs.sendForm(serviceId, templateId, form);
  }

  // Función para inicializar el formulario
  function initializeForm() {
    const form = document.getElementById("form");
    const btn = document.getElementById("button");
    const toast = document.getElementById("toast-success");
    const dismissBtn = document.getElementById("dismiss-toast");

    // Verificar que todos los elementos existan
    if (!form || !btn || !toast || !dismissBtn) {
      console.log('Elementos del formulario no encontrados, reintentando...');
      setTimeout(initializeForm, 200);
      return;
    }

    // Limpiar event listeners previos si existen
    if (form._emailjsHandler) {
      form.removeEventListener("submit", form._emailjsHandler);
    }
    if (dismissBtn._emailjsDismissHandler) {
      dismissBtn.removeEventListener("click", dismissBtn._emailjsDismissHandler);
    }

    // Crear nuevos handlers
    const submitHandler = async (event) => {
      event.preventDefault();
      
      // Deshabilitar botón y cambiar texto
      btn.disabled = true;
      btn.textContent = "Enviando...";
      btn.classList.add("opacity-75", "cursor-not-allowed");

      try {
        await sendEmail(form);
        
        // Éxito
        btn.textContent = "¡Enviado!";
        btn.classList.remove("opacity-75", "cursor-not-allowed");
        btn.classList.add("bg-emerald-500");
        
        // Mostrar toast de éxito
        toast.classList.remove("hidden");
        setTimeout(() => toast.classList.add("hidden"), 7000);
        
        // Limpiar formulario
        form.reset();
        
        // Restaurar botón después de 3 segundos
        setTimeout(() => {
          btn.disabled = false;
          btn.textContent = "Enviar solicitud";
          btn.classList.remove("bg-emerald-500");
        }, 3000);
        
      } catch (err) {
        // Error
        console.error('Error enviando email:', err);
        btn.disabled = false;
        btn.textContent = "Enviar solicitud";
        btn.classList.remove("opacity-75", "cursor-not-allowed");
        alert("Error al enviar el formulario. Por favor, inténtalo de nuevo.");
      }
    };

    const dismissHandler = () => toast.classList.add("hidden");

    // Guardar referencias a los handlers para poder limpiarlos después
    form._emailjsHandler = submitHandler;
    dismissBtn._emailjsDismissHandler = dismissHandler;

    // Agregar event listeners
    form.addEventListener("submit", submitHandler);
    dismissBtn.addEventListener("click", dismissHandler);
    
    console.log('Formulario inicializado correctamente');
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeForm);
  } else {
    initializeForm();
  }

  // Observer para detectar cambios en el DOM (útil para SPAs)
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.type === 'childList') {
        // Verificar si el formulario está presente
        const form = document.getElementById("form");
        if (form && !form._emailjsInitialized) {
          form._emailjsInitialized = true;
          setTimeout(initializeForm, 100);
        }
      }
    });
  });

  // Observar cambios en el body
  observer.observe(document.body, {
    childList: true,
    subtree: true
  });

  // Reinicializar en múltiples eventos
  window.addEventListener('pageshow', () => {
    setTimeout(initializeForm, 100);
  });

  window.addEventListener('focus', () => {
    setTimeout(initializeForm, 100);
  });

  // Para Astro específicamente - detectar cambios de ruta
  let currentPath = window.location.pathname;
  setInterval(() => {
    if (window.location.pathname !== currentPath) {
      currentPath = window.location.pathname;
      if (currentPath.includes('Form') || currentPath.includes('form')) {
        setTimeout(initializeForm, 200);
      }
    }
  }, 500);
</script>

