---
import Layout from "../layouts/Layout.astro";
---


<Layout title="Formulario de Evento">
  <main class="max-w-2xl mx-auto p-6 text-white">
    <h1 class="text-2xl font-bold mb-6">Solicitar Evento</h1>

    <form 
      action="https://formsubmit.co/TU_CORREO_AQUI" 
      method="POST" 
      class="space-y-4 bg-gray-800 p-6 rounded-lg shadow-lg"
    >
      <div>
        <label for="nombre" class="block mb-1 font-semibold">Nombre</label>
        <input 
          type="text" 
          id="nombre" 
          name="nombre" 
          required 
          class="w-full p-2 rounded text-black"
        />
      </div>

      <div>
        <label for="email" class="block mb-1 font-semibold">Correo electrónico</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="w-full p-2 rounded text-black"
        />
      </div>

      <div>
        <label for="detalles" class="block mb-1 font-semibold">Detalles del evento</label>
        <textarea 
          id="detalles" 
          name="detalles" 
          rows="4" 
          required 
          class="w-full p-2 rounded text-black"
        ></textarea>
      </div>

      <!-- Configuración oculta de FormSubmit -->
      <input type="hidden" name="_next" value="https://TU_DOMINIO.com/gracias" />
      <input type="hidden" name="_captcha" value="false" />

      <button 
        type="submit" 
        class="bg-primary px-4 py-2 rounded-lg font-bold hover:bg-primary-light transition-colors"
      >
        Enviar Solicitud
      </button>
    </form>
  </main>
</Layout>