---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Hero -->
  <section class="py-1 bg-gradient-to-b from-tertiary/100 to-white">
    <div class="mx-auto max-w-6xl px-6">
      <div class="text-center mt-20 mb-10">
        <h1 class="text-5xl font-bold text-gray-800 mb-6">Papelería</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Catálogo de detalles personalizados de De Corazón
        </p>
      </div>
    </div>
  </section>

  <!-- Grid catálogo 7 items (sin botones) -->
  <section class="py-20 bg-white">
    <div class="mx-auto max-w-6xl px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-800 mb-4">Decoración Personalizada</h2>
        <p class="text-lg text-gray-600">Elige tu categoría y nosotros la personalizamos</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Botellas personalizadas -->
        <a class="group relative block rounded-2xl overflow-hidden shadow-2xl">
          <img src="/src/assets/galleryBottles/bottles_01.webp" alt="Botellas personalizadas" class="w-full h-72 object-cover " />
          <div class="absolute inset-0 bg-black/30 transition group-hover:bg-black/40"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center">
            <p class="text-sm font-medium text-white/90 mb-2 tracking-wide">DECORACIÓN PERSONALIZADA</p>
            <h3 class="text-2xl font-extrabold tracking-wide text-white drop-shadow mb-4">
              BOTELLAS PERSONALIZADAS
            </h3>
            <button class=" border-1 border-white text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors duration-300 cursor-pointer" data-category="bottles">
              VER
            </button>
          </div>
        </a>

        <!-- Papas personalizadas -->
        <a class="group relative block rounded-2xl overflow-hidden shadow-lg">
          <img src="/src/assets/galleryPotatoes/potatoe_03.webp" alt="Papas personalizadas" class="w-full h-72 object-cover " />
          <div class="absolute inset-0 bg-black/30 transition group-hover:bg-black/40"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center">
            <p class="text-sm font-medium text-white/90 mb-2 tracking-wide">DECORACIÓN PERSONALIZADA</p>
            <h3 class="text-2xl font-extrabold tracking-wide text-white drop-shadow mb-4">
              PAPAS PERSONALIZADAS
            </h3>
             <button class="border-1 border-white text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors duration-300 cursor-pointer">
              VER
            </button>
          </div>
        </a>

        <!-- Carteles y manteles -->
        <a class="group relative block rounded-2xl overflow-hidden shadow-lg">
           <img src="/src/assets/gallerySigns/sign_01.webp" alt="Carteles y manteles" class="w-full h-72 object-cover " />
          <div class="absolute inset-0 bg-black/30 transition group-hover:bg-black/40"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center">
            <p class="text-sm font-medium text-white/90 mb-2 tracking-wide">DECORACIÓN PERSONALIZADA</p>
            <h3 class="text-2xl font-extrabold tracking-wide text-white drop-shadow mb-4">
              CARTELES Y MANTELES
            </h3>
             <button class="border-1 border-white text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors duration-300 cursor-pointer">
              VER
            </button>
          </div>
        </a>


        <!-- Nutellas personalizadas -->
        <a class="group relative block rounded-2xl overflow-hidden shadow-lg">
          <img src="/src/assets/galleryNutellas/nutella_06.webp" alt="Nutellas personalizadas" class="w-full h-72 object-cover " />
          <div class="absolute inset-0 bg-black/30 transition group-hover:bg-black/40"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center">
            <p class="text-sm font-medium text-white/90 mb-2 tracking-wide">DECORACIÓN PERSONALIZADA</p>
            <h3 class="text-2xl font-extrabold tracking-wide text-white drop-shadow mb-4">
              NUTELLAS PERSONALIZADAS
            </h3>
             <button class="border-1 border-white text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors duration-300 cursor-pointer">
              VER
            </button>
          </div>
        </a>

        <!-- Chocolatinas -->
        <a class="group relative block rounded-2xl overflow-hidden shadow-lg">
          <img src="/src/assets/galleryChocolates/chocolat_01.webp" alt="Chocolatinas personalizadas" class="w-full h-72 object-cover " />
          <div class="absolute inset-0 bg-black/30 transition group-hover:bg-black/40"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center">
            <p class="text-sm font-medium text-white/90 mb-2 tracking-wide">DECORACIÓN PERSONALIZADA</p>
            <h3 class="text-2xl font-extrabold tracking-wide text-white drop-shadow mb-4">
              CHOCOLATINAS
            </h3>
            <button class="border-1 border-white text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors duration-300 cursor-pointer">
              VER
            </button>
          </div>
        </a>

        <!-- Latas -->
        <a class="group relative block rounded-2xl overflow-hidden shadow-lg lg:col-span-1 md:col-span-2 col-span-1">
          <img src="/src/assets/galleryCans/cans_05.webp" alt="Latas de Pringles personalizadas" class="w-full h-72 object-cover " />
          <div class="absolute inset-0 bg-black/30 transition group-hover:bg-black/40"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center">
            <p class="text-sm font-medium text-white/90 mb-2 tracking-wide">DECORACIÓN PERSONALIZADA</p>
            <h3 class="text-2xl font-extrabold tracking-wide text-white drop-shadow mb-4">
              LATAS PRINGLES
            </h3>
            <button class="border-1 border-white text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors duration-300 cursor-pointer">
              VER
            </button>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary">
    <div class="mx-auto max-w-4xl px-6 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">¿Quieres un diseño a medida?</h2>
      <p class="text-xl text-white/90 mb-8">
        Escríbenos y te ayudamos a crear una experiencia única con papelería que
        hable de ti.
      </p>
      <a href="/Form" class="inline-block bg-white text-primary px-8 py-4 rounded-xl font-semibold text-lg hover:bg-gray-500 hover:text-white transition-colors duration-300 shadow-lg">
        Solicitar Presupuesto
      </a>
    </div>
  </section>
</Layout>



