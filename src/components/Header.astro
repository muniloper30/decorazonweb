<header
  class="flex"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="#">
          <img
            src="/src/assets/logoDcorazon.png"
            alt="d'corazon Logo"
            class="h-25 w-auto"
          />
        </a>
      </div>

      <!-- Navegación desktop -->
      <nav class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a
            href="#info"
            class="text-black hover:text-white px-3 py-2 rounded-md text-sm font-semibold transition-colors duration-200"
          >
            Info
          </a>
          <a
            href="#servicios"
            class="text-black hover:text-white px-3 py-2 rounded-md text-sm font-semibold transition-colors duration-200"
          >
            Servicios
          </a>
          <a
            href="#galeria"
            class="text-black hover:text-white px-3 py-2 rounded-md text-sm font-semibold transition-colors duration-200"
          >
            Galería
          </a>
          <a
            href="#contacto"
            class="text-black hover:text-white px-3 py-2 rounded-md text-sm font-semibold transition-colors duration-200"
          >
            Contacto
          </a>
        </div>
      </nav>

      <!-- Botón móvil -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button text-black hover:text-red-300 focus:outline-none focus:text-red-300"
          aria-label="Abrir menú"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menú móvil -->
  <div class="mobile-menu hidden md:hidden bg-black/95 backdrop-blur-md">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a
        href="#info"
        class="text-white hover:text-red-300 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200"
      >
        Info
      </a>
      <a
        href="#servicios"
        class="text-white hover:text-red-300 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200"
      >
        Servicios
      </a>
      <a
        href="#galeria"
        class="text-white hover:text-red-300 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200"
      >
        Galería
      </a>
      <a
        href="#contacto"
        class="text-white hover:text-red-300 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200"
      >
        Contacto
      </a>
    </div>
  </div>
</header>

<script>
  // Toggle del menú móvil
  const mobileMenuButton = document.querySelector(".mobile-menu-button");
  const mobileMenu = document.querySelector(".mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }

  // Cerrar menú al hacer click en un enlace
  const mobileLinks = document.querySelectorAll(".mobile-menu a");
  mobileLinks.forEach((link) => {
    link.addEventListener("click", () => {
      if (mobileMenu) {
        mobileMenu.classList.add("hidden");
      }
    });
  });

  // Smooth scroll para los enlaces del navbar
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", (e: Event) => {
      e.preventDefault();
      const href = (anchor as HTMLAnchorElement).getAttribute("href");
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
      }
    });
  });
</script>
